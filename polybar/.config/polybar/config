bar-used-indicator-font = 25
bar-used-indicator-foreground = #fff
bar-used-fill = ∎
bar-used-fill-font = 5
bar-used-empty = ∎
bar-used-empty-font = 5
bar-used-empty-foreground = #44

;[module/bluetooth]
;type = custom/script
;interval = 5
;exec = ~/.config/polybar/bluetooth

[module/mail]
type = custom/script
interval = 10
format = <label>
format-prefix = "E-Mail: "
;format-prefix = " "
format-suffix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #bd2c40
exec = ~/.config/polybar/mail

[module/date]
type = internal/date
interval = 5
date =
date-alt = " %a %d %b"
time = "%H:%M%p "
format-prefix = //
;format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5
label = %date% %time%

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98
format-charging = <animation-charging> <label-charging>
format-charging-underline = #ffb52a
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}
format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.foreground-alt}
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

[module/powermenu]
type = custom/menu
format-spacing = 1
label-open = >>>
label-open-foreground = ${colors.secondary}
label-close = >>> Cancel
label-close-foreground = ${colors.promo}
label-separator = *
label-separator-foreground = ${colors.foreground-alt}
menu-0-0 = Reloading
menu-0-0-exec = menu-open-1
menu-0-0-underline = ${colors.reb}
menu-0-1 = Shutdown
menu-0-1-exec = menu-open-2
menu-0-1-underline = ${colors.power}
menu-1-0 = Closing all applications, shutting down the computer
menu-1-0-exec = sudo reboot
menu-1-1 = Cancel 
menu-1-1-exec = menu-open-0
menu-2-0 = Close all applications and shutdown your computer
menu-2-0-exec = sudo poweroff
menu-2-1 = Cancel
menu-2-1-exec = menu-open-0

[module/volume]
type = internal/volume
;speaker-mixer = Speaker
;headphone-mixer = Headphone
;headphone-id = 9
format-volume = <label-volume>
;format-volume-prefix = " "
format-volume-prefix = " "
;format-volume-suffix = " "
label-muted = muted
